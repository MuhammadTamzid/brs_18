<% if @review.errors.any? %>
  $("#edit-review-form-<%= @review.id %>").prepend("<%= j render("shared/error_messages", object: @review) %>");
<% else %>
  $("#review-rating-<%= @review.id %>").html("<%= @review.rating %>");
  $("#review-content-<%= @review.id %>").html("<%= @review.content %>");
  $("#edit_review_<%= @review.id %>").modal("hide");
  $("#book-rater").html("<%= Review.total_rater @review.book.id %>");
<% end %>
