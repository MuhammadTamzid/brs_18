<% if @review.errors.any? %>
  $("#review_form").prepend("<%= j render("shared/error_messages", object: @review) %>");
<% else %>
  $("#reviews-book").prepend("<%= j render "review", review: @review %>");
  $("#review_form").hide();
  $("#book-rating").html("<%= @review.book.rating %>");
  $("#book-rater").html("<%= Review.total_rater @review.book.id %>");
<% end %>
