<h1><%= t :all_users %></h1>
  <table class="table">
    <tr>
      <th><%= t :name %></th>
      <th><%= t :email %></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </table>

<%= paginate @users %>
<%= page_entries_info @users %>