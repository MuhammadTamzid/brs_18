<% if params[:type] %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1><%= @user.name %></h1>
        <span><%= link_to t(:view_profile), @user %></span>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
      <% end %>
    </div>
  </div>
<% else %>
  <h1><%= t :user_profile %></h1>
  <div class="row">
    <div class="col-md-5">
      <p><%= render "user_picture" %></p>
      <%= render "shared/stats" %>
      <%= render "follow_form" %><br>
      <p><b><%= t :name %>: <%= @user.name %></b></p>
      <p><%= t :email %>: <%= @user.email %></p>
    </div>
  </div>
  <%= render "favorite_books_list" %><br>
  <%= render "reading_history" %>
  <div class="row">
    <div class="col-md-7">
      <h3><%= t :user_activity %></h3>
      <p><%= render "user_activity" %></p>
    </div>
  </div>
<% end %>