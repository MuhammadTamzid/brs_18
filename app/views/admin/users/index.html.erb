<h1><%= t :all_users %></h1>
  <table class="table">
    <tr>
      <th></th>
      <th><%= t :name %></th>
      <th><%= t :email %></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.picture.url(:thumb) %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= mail_to user.email %></td>
        <td><%= link_to t(:edit),  edit_admin_user_path(user), class: "btn btn-primary" %>
        <%= link_to t(:delete), admin_user_path(user), method: :delete,
          class: "btn btn-danger", data: {confirm: t(:confirm_message_delete)} %></td>
      </tr>
    <% end %>
  </table>

<%= paginate @users %>
<%= page_entries_info @users %>