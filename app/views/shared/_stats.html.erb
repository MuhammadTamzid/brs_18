<% @user ||= current_user %>
<div class="stats">
  <%= link_to "#", following: true do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t :following %>
  <% end %>
  <%= link_to "#", followers: true do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t :followers %>
  <% end %>
</div>