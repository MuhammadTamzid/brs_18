<div id="favourite_form">
  <% if @user_book.favourite %>
    <button class="btn btn-info" disabled="true"><%= t :added_as_favourite %></button>
  <% else %>
    <%= form_for @user_book, url: favourite_path(@user_book), remote: true do |f| %>
      <%= f.hidden_field :favourite, value: true %>
      <%= f.submit t("mark_as_favorite"), class: "btn btn-info btn-circle" %>
    <% end %>
  <% end %>
</div>