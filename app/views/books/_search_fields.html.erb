<div class="form-group">
  <label for="filter"><%= f.label :category_id_eq, t("category") %></label>
  <%= f.select :category_id_eq,
    options_from_collection_for_select(@categories,
    :id, :name, @search.category_id_eq), {prompt: false},
    {class: "form-control"} %>
</div>
<div class="form-group">
  <label for="contain"><%= f.label :title_cont, t("title") %></label>
  <%= f.text_field :title_cont, class: "form-control" %>
</div>
<div class="form-group">
  <label for="contain"><%= f.label :rating_gteq, t("rating_between") %></label>
  <%= f.text_field :rating_gteq, class: "form-control" %>
</div>
<div class="form-group">
  <label for="contain"><%= f.label :rating_lteq, t("and") %></label>
  <%= f.text_field :rating_lteq, class: "form-control" %>
</div>
<table class="table">
  <tr>
    <div class="form-group">
      <td>
        <label for="contain"><%= f.label :filter_book, t(:all_books) %></label>
      </td>
      <td>
        <%= f.radio_button :filter_book, "all #{current_user.id}", checked: true %>
      </td>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <td>
        <label for="contain"><%= f.label :filter_book, t(:favourite) %></label>
      </td>
      <td>
        <%= f.radio_button :filter_book, "favourite #{current_user.id}"%>
      </td>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <td>
        <label for="contain"><%= f.label :filter_book, t(:not_favourite) %></label>
      </td>
      <td>
        <%= f.radio_button :filter_book, "unfavourite #{current_user.id}" %>
      </td>
    </div>
  </tr>
</table>