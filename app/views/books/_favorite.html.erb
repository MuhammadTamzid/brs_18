<% unless @user_book.favourite %>
  <div id="favourite_form">
    <%= form_for @user_book, url: favourite_path(@user_book), remote: true do |f| %>
      <%= f.hidden_field :favourite, value: true %>
      <%= f.submit t("marked_as_favorite"), class: "btn btn-info" %>
    <% end %>
  </div>
<% else %>
  <h3><%= t "added_as_favorite" %></h3>
<% end %>
<div id="favourite_text"><h3><%= t "added_as_favorite" %></h3></div>
